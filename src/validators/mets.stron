<?xml version="1.0"?>
<schema xmlns="http://purl.oclc.org/dsdl/schematron">
	<title>METS validation schema for py_premis_in_mets</title>

	<ns prefix="mets" uri="http://www.loc.gov/METS/"/>
	
	<pattern id="baseMetsTests">
		<rule context="mets:mets">
			<assert test="(count(mets:metsHdr) = 1) or (count(mets:metsHdr) = 0)">
				There should be only one or zero metsHdr elements
			</assert>
		</rule>
	</pattern>
</schema>